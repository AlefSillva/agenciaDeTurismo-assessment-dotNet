@page
@model TurismoApp.Pages.PaisesDestino.CreatePaisDestinoModel

@{
    ViewData["Title"] = "Cadastrar País";
}

<h2>Cadastrar País</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="PaisDestino.Nome" class="control-label"></label>
        <input asp-for="PaisDestino.Nome" class="form-control" />
        <span asp-validation-for="PaisDestino.Nome" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<div>
    <a asp-page="/PaisesDestino/Index">Voltar para a Lista de Países</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
