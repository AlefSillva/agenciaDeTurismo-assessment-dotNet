@page "{id:int}"
@model TurismoApp.Pages.CidadesDestino.CidadeDestinoDetailsModel


<h2>Detalhes da Cidade</h2>

@if (Model.CidadeDestino != null)
{
    <div>
        <p><strong>ID:</strong> @Model.CidadeDestino.Id</p>
        <p><strong>Nome:</strong> @Model.CidadeDestino.Nome</p>
    </div>
}
else
{
    <p>Cidade não encontrada.</p>
}

<a asp-page="/Cidades/CreateCidadeDestino">Voltar ao Cadastro de Cidades</a>
