@page
@model TurismoApp.Pages.CidadesDestino.CreateCidadeDestinoModel

@{
    ViewData["Title"] = "Cadastrar Cidade de Destino";
}

<h1>Cadastrar Cidade de Destino</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CidadeDestino.Nome" class="control-label"></label>
                <input asp-for="CidadeDestino.Nome" class="form-control" />
                <span asp-validation-for="CidadeDestino.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CidadeDestino.PaisDestinoId" class="control-label"></label>
                <select asp-for="CidadeDestino.PaisDestinoId" class="form-control" asp-items="ViewBag.Paises"></select>
                <span asp-validation-for="CidadeDestino.PaisDestinoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/CidadesDestino/Index">Voltar para a Lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
