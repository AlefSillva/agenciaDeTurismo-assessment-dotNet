@page
@model TurismoApp.Pages.PacotesTuristicos.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Pacote";
}

<h1>Detalhes do Pacote Turístico</h1>

<div>
    <h4>PacoteTuristico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.PacoteTuristico.Titulo</dd>

        <dt class="col-sm-2">Data de Início</dt>
        <dd class="col-sm-10">@Model.PacoteTuristico.DataInicio.ToShortDateString()</dd>

        <dt class="col-sm-2">Capacidade Máxima</dt>
        <dd class="col-sm-10">@Model.PacoteTuristico.CapacidadeMaxima</dd>

        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.PacoteTuristico.Preco.ToString("C")</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.PacoteTuristico.Id">Editar</a> |
    <a asp-page="./Index">Voltar à Lista</a>
</div>
