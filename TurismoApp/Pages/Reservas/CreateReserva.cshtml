@page
@model TurismoApp.Pages.Reservas.CreateReservaModel

@{
    ViewData["Title"] = "Criar Reserva";
}

<h1>Criar Reserva</h1>

<h4>Nova Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Pacote Turístico</label>
                <select asp-for="PacoteTuristicoId" class="form-control" asp-items="ViewBag.PacoteTuristicoId"></select>
                <span asp-validation-for="PacoteTuristicoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantidadeDiarias" class="control-label"></label>
                <input asp-for="QuantidadeDiarias" class="form-control" type="number" />
                <span asp-validation-for="QuantidadeDiarias" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Criar Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/PacotesTuristicos/Index">Voltar para a Lista de Pacotes</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}