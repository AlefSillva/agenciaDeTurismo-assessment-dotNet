@page
@model TurismoApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Usuário:</label>
        <input asp-for="Username" />
    </div>
    <div>
        <label>Senha:</label>
        <input asp-for="Password" type="password" />
    </div>
    <div style="color:red;">
        @Model.ErrorMessage
    </div>
    <button type="submit">Entrar</button>
</form>
